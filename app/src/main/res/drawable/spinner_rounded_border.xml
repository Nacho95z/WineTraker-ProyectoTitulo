<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo blanco con borde vino -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />

            <corners android:radius="16dp" />

            <stroke
                android:width="2dp"
                android:color="#B22034" />

            <!-- padding para el texto (dejamos espacio para la flecha) -->
            <padding
                android:left="90dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Flecha vino alineada a la derecha -->
    <item
        android:gravity="end|center_vertical"
        android:right="12dp"
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/ic_arrow_drop_down_vino" />
</layer-list>
