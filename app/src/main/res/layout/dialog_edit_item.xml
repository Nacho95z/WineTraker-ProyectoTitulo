<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_dialog_wine"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar información"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B22034"
            android:fontFamily="@font/dancing_script"
            android:layout_marginBottom="12dp" />

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Variedad -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Variedad"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editVariety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Año -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Año"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editVintage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Origen -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Origen"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Grado alcohólico -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Grado alcohólico"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Categoría -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Categoría"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Precio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Precio"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Comentario IA -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Comentario asistente IA"
            app:boxStrokeColor="@color/my_dark_primary"
            app:hintTextColor="@color/my_dark_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top|start"
                android:textColor="@android:color/black"
                android:textColorHint="@color/my_dark_primary" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B22034" />

            <Space
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GUARDAR"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B22034" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
