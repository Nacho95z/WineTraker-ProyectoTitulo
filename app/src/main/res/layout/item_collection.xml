<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#B22034"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Foto del vino -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                tools:src="@android:drawable/ic_menu_gallery"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <!-- CONTENIDO TEXTO + ICONO CONSUMO ÓPTIMO -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Nombre del vino -->
            <TextView
                android:id="@+id/itemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre del Vino"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iconOptimal"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ICONO COPA: consumo óptimo -->
            <ImageView
                android:id="@+id/iconOptimal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/is_wine_optimal"
                android:contentDescription="@string/consumo_optimo"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/itemName"
                app:layout_constraintBottom_toBottomOf="@id/itemName" />

            <!-- Resto de textos -->
            <TextView
                android:id="@+id/itemVariety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Variedad: Cabernet"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemName" />

            <TextView
                android:id="@+id/itemVintage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Año: 2018"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemVariety" />

            <TextView
                android:id="@+id/itemOrigin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Origen: Valle del Maipo"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemVintage" />

            <TextView
                android:id="@+id/itemPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alcohol: 13.5%"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemOrigin" />

            <TextView
                android:id="@+id/itemCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría: -"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemPercentage" />

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: -"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemCategory" />

            <TextView
                android:id="@+id/itemComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Comentario IA: -"
                android:textColor="#757575"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemPrice" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Botones Editar / Eliminar -->
        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/contentLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"
                android:textSize="12sp"
                android:backgroundTint="#B00020"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="6dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textSize="12sp"
                android:backgroundTint="#B00020"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                android:minHeight="48dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
