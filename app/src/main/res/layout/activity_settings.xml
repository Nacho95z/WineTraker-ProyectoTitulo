<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- SECCIÓN: PERFIL DE USUARIO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil de usuario"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <TextView
                    android:id="@+id/txtProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.cl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtProfileUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UID: ..."
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btnEditName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cambiar nombre" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnEditEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cambiar correo" />
                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: SEGURIDAD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguridad"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar contraseña"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: SESIÓN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sesión"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchRememberSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mantener sesión iniciada"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: NOTIFICACIONES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notificaciones"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchNotifOptimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vinos en punto óptimo"
                    android:layout_marginTop="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchNotifExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vencimientos de guarda" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchNotifNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Novedades y actualizaciones" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: TEMA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tema de la aplicación"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <RadioGroup
                    android:id="@+id/rgTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbThemeLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo claro" />

                    <RadioButton
                        android:id="@+id/rbThemeDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo oscuro" />

                    <RadioButton
                        android:id="@+id/rbThemeSystem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automático (según sistema)" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: SINCRONIZACIÓN / RESPALDO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronización y respaldo"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#B22034" />

                <Button
                    android:id="@+id/btnBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hacer backup en Firestore"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnRestore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurar backup"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exportar colección a CSV/PDF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SECCIÓN: ACERCA DE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAboutVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versión 1.0.0"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WineTrack está construida con Android y Firebase."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Política de privacidad"
                    android:textColor="#B22034"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Términos de uso"
                    android:textColor="#B22034"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>