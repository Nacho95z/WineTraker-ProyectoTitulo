<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayImageAndText">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- Top bar con menú -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Ícono menú -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                app:tint="#B22034"
                android:contentDescription="Abrir menú"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Título -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar etiqueta"
                android:textColor="#B22034"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/dancing_script"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/menuIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- CONTENIDO ORIGINAL, DEBAJO DEL HEADER -->
        <RelativeLayout
            android:id="@+id/contentRoot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Contenedor horizontal para la imagen y el texto -->
            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp">

                <!-- Imagen capturada (a la izquierda) -->
                <ImageView
                    android:id="@+id/capturedImageView"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <!-- Texto reconocido editable (a la derecha) -->
                <EditText
                    android:id="@+id/recognizedTextEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#80000000"
                    android:padding="8dp"
                    android:hint="Edit recognized text here"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <!-- Campos adicionales -->
            <LinearLayout
                android:id="@+id/textFieldsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/contentLayout"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/wineNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Vino"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/my_dark_primary"
                    android:textColorHint="#888888" />

                <EditText
                    android:id="@+id/categoryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Categoría / línea (ej: Gran Reserva de los Andes)"
                    android:inputType="textCapWords"
                    android:textColor="@color/my_dark_primary"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Variedad"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/my_dark_primary"
                    android:textColorHint="#888888" />

                <EditText
                    android:id="@+id/vintageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cosecha (Año)"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/my_dark_primary"
                    android:textColorHint="#888888" />

                <EditText
                    android:id="@+id/originEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Región"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/my_dark_primary"
                    android:textColorHint="#888888" />

                <EditText
                    android:id="@+id/percentageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Grado alcohólico"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/my_dark_primary"
                    android:textColorHint="#888888" />
            </LinearLayout>

            <!-- Contenedor para los botones en la parte inferior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/buttonDiscard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descartar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- ProgressBar centrado -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <!-- GIF de IA analizando, centrado -->
            <ImageView
                android:id="@+id/aiProgressGif"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENÚ LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>
